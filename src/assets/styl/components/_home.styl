.app-content {
  padding-left: 256px;
}
.mu-appbar {
  background-color: primary_color;
}
.welcome {
    background-color: primary_color;
    color: white_color;
    padding: 15px;
    border-bottom: 2px solid secondary_color;
    h1 {
      margin-top: 0;
      text-transform: uppercase;
      font-weight: 100;
      letter-spacing: 1px;
      position: relative;
      &::after {
        content: '';
        width: 70px;
        height: 2px;
        background-color: #fff;;
        position: absolute;
        bottom: -2px;
        left: 0;
      }
    }
    img {
      width: 100%;
      border-radius: 50%;
    }
    .row {
      align-items: center;
    }
}
  
/*Helpers*/
.text {
  &.center {
    text-align: center;
  }
}