.add-forms {
  background-color: #fff;
  z-index: 1000;
  position: fixed;
  top: 64px;
  right: -380px;
  width: 330px;
  height: calc(100% - 64px);
  box-shadow: 0 0 5px #666;
  border-radius: 2px;
  transform: skew(-5deg);
  padding-right: 50px;
  padding-left: 20px;
  transition: .3s;
  > div {
    transform: skew(5deg)
  }
  &.active {
    right: -28px;
  }

  h2 {
    color: #ff4081;
    margin: 0;
    margin-top: 15px;
    font-size: 2.2rem;
    font-weight: 100;
    padding: 10px 15px;
    text-transform: uppercase;
  }
  .content {
    padding: 0 15px;
  }
  .add-button {
    position: absolute;
    bottom: 15px;
    right: 15px;
  }
}